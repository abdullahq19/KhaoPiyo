<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="200dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    android:id="@+id/rvCalories"
    android:background="@drawable/rv_shape">

    <ImageView
        android:id="@+id/ivDImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pattyburger"
        app:layout_constraintBottom_toTopOf="@id/tvDName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/tvDName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nawabi Pizza"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/ivDImage"
        app:layout_constraintRight_toRightOf="@id/ivDImage"
        app:layout_constraintTop_toBottomOf="@id/ivDImage" />

    <LinearLayout
        android:id="@+id/llPrice"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/price_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvDCurrencyType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKR:"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvDPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1500"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>