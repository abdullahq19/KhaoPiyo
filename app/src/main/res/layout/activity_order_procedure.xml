<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    tools:context=".OrderProcedure">

    <TextView
        android:id="@+id/tvSCName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:text="Secure checkout"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:textColor="@color/off_white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.65" />

    <EditText
        android:id="@+id/etPhoneNo"
        style="@style/et_theme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="10dp"
        android:hint="Phone"
        android:inputType="phone"
        android:maxLines="1"
        android:paddingStart="5dp"
        android:textColor="@color/white"
        android:textColorHint="#9CFFFEFE"
        android:textSize="22sp"
        app:layout_constraintHeight_percent="0.084"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSCName"
        app:layout_constraintWidth_percent="0.9" />

    <EditText
        android:id="@+id/etAddress"
        style="@style/et_theme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:hint="Address"
        android:paddingStart="10dp"
        android:paddingEnd="30dp"
        android:textColor="@color/white"
        android:textColorHint="#9CFFFEFE"
        android:textSize="18sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="@id/etPhoneNo"
        app:layout_constraintRight_toRightOf="@id/etPhoneNo"
        app:layout_constraintTop_toBottomOf="@id/etPhoneNo"
        app:layout_constraintWidth_percent="0.9"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/location_on"
        app:layout_constraintBottom_toBottomOf="@id/etAddress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/etAddress" />

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:text="Special instructions"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.043"
        app:layout_constraintLeft_toLeftOf="@id/etAddress"
        app:layout_constraintTop_toBottomOf="@id/etAddress"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/tvPreference"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:text="Any specific preferences? Let us know."
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/off_white"
        android:textSize="17sp"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintLeft_toLeftOf="@id/tvInstructions"
        app:layout_constraintTop_toBottomOf="@id/tvInstructions"
        app:layout_constraintWidth_percent="0.9" />

    <EditText
        android:id="@+id/etDetails"
        style="@style/et_theme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="e.g spicy or light"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:textColorHint="#9CFFFEFE"
        android:textSize="22sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="@id/tvPreference"
        app:layout_constraintTop_toBottomOf="@id/tvPreference"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:text="Total:"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintLeft_toLeftOf="@id/etDetails"
        app:layout_constraintTop_toBottomOf="@id/etDetails"
        app:layout_constraintWidth_percent="0.18" />

    <TextView
        android:id="@+id/tvProcedureTotalPrice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:text="2472.234"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDetails"
        app:layout_constraintWidth_percent="0.28" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOrderNow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rv_cart_shape"
        android:text="Order now"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>